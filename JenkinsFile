pipeline {
  agent any
  tools {
     maven 'Maven'
    }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                echo "PATH = ${PATH}"
                echo "M2_HOME = ${M2_HOME}"
            '''
     }
   }

    stage ('Build') {
        steps {
        
          sh '/usr/share/maven/bin/mvn clean package'
    }
 
    }

    stage ('Deploy-To-Tomcat') {
          steps {
            sshagent(['tomcat']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@54.87.58.212:/opt/tomcat/webapps/webapp.war'
              }      
           }       
    }

    stage ('Check-Git-Secrets') {
      steps {
        sh 'rm trufflehog || true'
        sh 'docker run gesellix/trufflehog --json https://github.com/cehkunal/webapp.git > trufflehog'
        sh 'cat trufflehog'
      }
    }
  }
}
